{
  "source": {
    "include": ["ops-automation/"],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules|__tests__|coverage)"
  },
  "opts": {
    "destination": "./docs/api",
    "recurse": true,
    "readme": "./README.md",
    "template": "node_modules/docdash"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": true
    }
  },
  "docdash": {
    "static": true,
    "sort": true,
    "search": true,
    "collapse": false,
    "wrap": true,
    "typedefs": true,
    "navLevel": 2,
    "sectionOrder": ["Modules", "Classes", "Namespaces", "Tutorials", "Global"]
  }
}
