{
  "env": {
    "es2022": true,
    "node": true,
    "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "error",
    "arrow-body-style": ["error", "as-needed"],
    "no-var": "error",
    "prefer-arrow-callback": "error",
    "prefer-template": "warn",
    "object-shorthand": "warn"
  }
}
