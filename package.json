{
  "name": "openclaw-ops-automation",
  "version": "1.0.0",
  "description": "OpenClaw-based distributed operations monitoring and automation system",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "npm run format:check && npm run lint && npm test",
    "docs": "jsdoc -c jsdoc.json",
    "worker:orchestrator": "node ops-automation/workers/orchestrator.js",
    "worker:metrics": "node ops-automation/workers/metrics-collector.js",
    "worker:logs": "node ops-automation/workers/logs-analyzer.js",
    "worker:alert": "node ops-automation/workers/alert-handler.js",
    "worker:autoheal": "node ops-automation/workers/autoheal.js",
    "worker:reporter": "node ops-automation/workers/reporter.js"
  },
  "keywords": [
    "openclaw",
    "automation",
    "monitoring",
    "ops",
    "devops",
    "ai-agents"
  ],
  "author": "OpenClaw Community",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdoc": "^4.0.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "node-cron": "^3.0.3",
    "ssh2": "^1.17.0",
    "winston": "^3.11.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
