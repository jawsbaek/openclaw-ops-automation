{
  "repositories": {
    "main-api": {
      "name": "Main API Service",
      "repo": "git@github.com:company/main-api.git",
      "branch": "main",
      "path": "/app/main-api",
      "service": "main-api.service",
      "language": "javascript",
      "auto_patch_enabled": true,
      "auto_deploy_enabled": false,
      "requires_approval": ["deploy", "database_migration", "config_change"],
      "test_command": "npm test",
      "build_command": "npm run build",
      "healthcheck_url": "http://localhost:3000/health"
    },
    "worker-service": {
      "name": "Background Worker",
      "repo": "git@github.com:company/worker-service.git",
      "branch": "main",
      "path": "/app/worker",
      "service": "worker.service",
      "language": "python",
      "auto_patch_enabled": true,
      "auto_deploy_enabled": false,
      "requires_approval": ["deploy"],
      "test_command": "pytest",
      "build_command": null,
      "healthcheck_url": null
    },
    "frontend-app": {
      "name": "Frontend Application",
      "repo": "git@github.com:company/frontend-app.git",
      "branch": "main",
      "path": "/var/www/frontend",
      "service": "nginx",
      "language": "typescript",
      "auto_patch_enabled": false,
      "auto_deploy_enabled": false,
      "requires_approval": ["deploy", "config_change"],
      "test_command": "npm run test",
      "build_command": "npm run build",
      "healthcheck_url": "http://localhost/health"
    }
  },
  "deployment": {
    "default_strategy": "canary",
    "default_stages": ["test", "staging", "production"],
    "auto_rollback": true,
    "rollback_triggers": {
      "error_rate_threshold": 1.0,
      "response_time_threshold": 500,
      "health_check_failures": 3
    }
  },
  "git": {
    "commit_message_template": "[AutoPatch] {issue_type}: {description}",
    "branch_prefix": "autopatch/",
    "pr_labels": ["autogenerated", "hotfix"],
    "auto_merge": false
  }
}
