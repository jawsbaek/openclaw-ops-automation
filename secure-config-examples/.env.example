# OpenClaw Ops Automation - Secure Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# Environment
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info

# =============================================================================
# Webhook Authentication
# =============================================================================
# Generate with: openssl rand -hex 32
WEBHOOK_AUTH_TOKEN=generate-with-openssl-rand-hex-32

# Generate with: openssl rand -base64 32
WEBHOOK_SECRET=generate-with-openssl-rand-base64-32

# =============================================================================
# Prometheus Monitoring
# =============================================================================
PROMETHEUS_URL=https://prometheus.example.com
PROMETHEUS_USER=monitoring_user
PROMETHEUS_PASSWORD=change-me-in-production

# TLS certificates for Prometheus (optional)
PROMETHEUS_CA_CERT_PATH=/path/to/ca.pem
PROMETHEUS_CLIENT_CERT_PATH=/path/to/client.pem
PROMETHEUS_CLIENT_KEY_PATH=/path/to/client-key.pem

# =============================================================================
# API Health Checks
# =============================================================================
API_HEALTH_URL=https://api.example.com/health

# =============================================================================
# Webhook Server TLS
# =============================================================================
WEBHOOK_TLS_ENABLED=true
WEBHOOK_TLS_CERT_PATH=/path/to/webhook-cert.pem
WEBHOOK_TLS_KEY_PATH=/path/to/webhook-key.pem

# =============================================================================
# Database (if needed)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/ops_automation

# =============================================================================
# External Integrations
# =============================================================================
# PagerDuty
# PAGERDUTY_API_KEY=your-pagerduty-key
# PAGERDUTY_SERVICE_ID=your-service-id

# Slack
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Datadog
# DATADOG_API_KEY=your-datadog-api-key
# DATADOG_APP_KEY=your-datadog-app-key

# Sentry (error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# Security
# =============================================================================
# Encryption key for sensitive data at rest
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=generate-with-openssl-rand-base64-32

# JWT secret for agent authentication (if implemented)
# Generate with: openssl rand -hex 64
JWT_SECRET=generate-with-openssl-rand-hex-64

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Audit Logging
# =============================================================================
AUDIT_LOG_PATH=logs/security-audit.jsonl
AUDIT_LOG_MAX_SIZE_MB=100
AUDIT_LOG_RETENTION_DAYS=90

# =============================================================================
# RBAC
# =============================================================================
RBAC_CONFIG_PATH=config/rbac.json

# =============================================================================
# OpenClaw
# =============================================================================
OPENCLAW_GATEWAY_URL=http://localhost:18789

# =============================================================================
# Secrets Vault (optional - HashiCorp Vault)
# =============================================================================
# VAULT_ADDR=https://vault.example.com
# VAULT_TOKEN=your-vault-token
# VAULT_PATH=secret/openclaw/ops-automation
